<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="info.androidhive.navigationdrawer.fragment.QuestionsFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="Sellectionnez une date pour faire apparaître les\nhorraires des séances déjà organisées ce jour-la "
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        />

    <CalendarView
        android:id="@+id/simpleCalendarView"
        android:layout_width="230dp"
        android:layout_height="310dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#ff000000"

        />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <LinearLayout
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/rectangle"></LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="Séance de travaille déjà organisé ce jour-là "
        android:gravity="center"
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salle : "
            android:gravity="center"
            />
        <EditText
            android:id="@+id/mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint=""
            android:inputType="textFilter|textNoSuggestions"
            android:layout_weight="14.76"
            android:layout_marginBottom="18dp"
            />
    </LinearLayout>



    <Button
        android:id="@+id/organiser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Organiser"
        android:onClick="onClick"
        android:layout_gravity="center_horizontal"
        />
</LinearLayout>